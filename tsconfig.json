{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["ES6", "dom"],
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
